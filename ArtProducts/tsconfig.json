{
  "compileOnSave": true,
  "include": [
    "./ClientApp",
    ".wwwroot/ts"
  ],
  "compilerOptions": {
    "outDir": "wwwroot/clientapp/out-tsc",
    "sourceMap": true, //create map files for debugging
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
